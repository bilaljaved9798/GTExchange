<form id="ResetPasswordForm">
	<div class="col-md-12 form-horizontal">


		<div class="seven">
			<a href="/DashBoard/Index" target="_self">

				<h2 style="color:red">
					<< Back to Dash_board

				</h2>

			</a>

		</div>




		<div class="form-group">


			<div class="thirteen " style="margin-top: 25px;">
				<h1>Reset Password</h1>
			</div>

			<hr />

			<label class="col-md-3 control-label"></label>


			<div class="col-md-8 floatreset">
				<input type="password" id="ResetPassword" class="form-control" pattern=".{6,}" required title="6 characters minimum" placeholder="New Password" />
				<label class="col-md-12 control-label  text-danger" id="lblError"></label>



				@*<input type="submit" value="Update" id="btnResetPassword" class="btn btn-default" />*@
				<button class="buttonview" id="btnResetPassword" style="float: initial; margin-top: 21px;">Update</button>



			</div>
		</div>

	</div>
    <script type="text/javascript">
        $("#btnResetPassword").click(function () {

            if ($("#ResetPassword").val().length >= 6) {
                $.ajax({
                    url: '/DashBoard/ResetPassword',
                    
                    type: 'POST',
                    data: { 'Password': $("#ResetPassword").val() },
                    
                    complete: function () { },
                    success: function (data) {
                        ShowErrorMsg("Password reset successfully.");
                        $("#ResetPassword").val('');

                    }
                });
            }
            else {
                $("#lblError").val('Minimum 6 Characters required.');
            }
        });
        
    </script>
   
    </form>



