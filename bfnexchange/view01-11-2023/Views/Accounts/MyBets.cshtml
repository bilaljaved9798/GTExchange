<script type="text/javascript">
	$(document).ready(function () {

		var dateNow = new Date();
		var newdate = new Date(dateNow).setDate(dateNow.getDate() - 5);
		$('#txtDateFrom').datetimepicker({
			format: 'YYYY-MM-DD hh:mm',
			defaultDate: newdate

		});
		$('#txtDateTo').datetimepicker({
			format: 'YYYY-MM-DD hh:mm',
			defaultDate: dateNow

		});

	});

	$("#btnLoad").click(function () {
		debugger;
		var datefrom = $("#txtDateFrom").val();
		var dateTo = $("#txtDateTo").val();
		ShowLoader();

		var userID = 0;

		if ($("#ddlUsers").val() != undefined) {
			userID = $("#ddlUsers").val();
		}
		$.ajax({
			url: '/DashBoard/BetsDetails',

			type: 'POST',

			data: { 'DateFrom': datefrom, 'DateTo': dateTo, 'UserID': userID },

			complete: function () { },
			success: function (data) {

				$("#ledgerdetails").html(data);
				HideLoader();


			},
			error: function (data) {
				HideLoader();
			}
		});
	});


</script>
