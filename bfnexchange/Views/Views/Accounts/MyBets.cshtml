
@{
    ViewBag.Title = "MyBets";
    Layout = "~/Views/Shared/_AccountsLayout.cshtml";
}

<div class="page-container">
    <div class="page-content">
        <div>
            <div class="page-body">
                <div class="col-xs-push-12">
                    <div class="row">

                        <div class="col-lg-3 col-sm-3">
                            <div class="form-group">
                                <label>Order Type</label>
                                <select name="lstorders" id="lstorders" class="form-control dropdown-toggle">
                                    <option selected="selected" value="SETTLED">SETTLED</option>
                                    <option value="MATCHED">MATCHED</option>
                                    <option value="UN-MATCHED">UN-MATCHED</option>
                                    <option value="VOIDED">VOIDED</option>
                                    <option value="LAPSED">LAPSED</option>
                                    <option value="CANCELLED">CANCELLED</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-lg-3 col-sm-3">
                            <label>Start Date:</label>
                            <div class="input-group">
                                <input type="text" id="txtDateFrom" class="form-control datepicker" />
                                <span class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </div>
                        </div>

                        <div class="col-lg-3 col-sm-3">
                            <label>End Date:</label>
                            <div class="input-group">
                                <input type="text" id="txtDateTo" class="form-control datepicker" />
                                <span class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </div>
                        </div>

                        <div class="col-lg-3 col-sm-3">
                            <label>&nbsp;</label>
                            <br />
                            <div>
                                <input type="button" value="Load Report" id="btnLoad" class="btn btn-default" />
                            </div>
                        </div>

                        <div class="col-md-12 no-padding">
                            <div id="ledgerdetails">

                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
        <hr>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {

        var dateNow = new Date();
        var newdate = new Date(dateNow).setDate(dateNow.getDate() - 5);
        $('#txtDateFrom').datetimepicker({
            format: 'YYYY-MM-DD hh:mm',
            defaultDate: newdate

        });
        $('#txtDateTo').datetimepicker({
            format: 'YYYY-MM-DD hh:mm',
            defaultDate: dateNow

        });

    });

</script>
